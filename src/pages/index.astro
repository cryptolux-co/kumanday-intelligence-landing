---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';

import { getImage } from 'astro:assets';
import { Image } from 'astro:assets';

import _titleSrc from '@assets/images/title.png';

const titleSrc = await getImage({ src: _titleSrc, format: 'webp' });

---

<Layout title="Welcome to Astro.">
	<main>
		<section class="logo-container">
			<Logo />
		</section>
		
		<!-- Titulo -->
		<section class="image-container">
			<Image
				src={titleSrc.src}
				class="central-image"
				width="256"
				height="256"
				loading="lazy"
				alt="Imagen Central"
			/>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	/* Logo en la parte superior */
	.logo-container {
		text-align: center;
		margin-bottom: 2rem;
	}

	/* Imagen central */
	.image-container {
		display: flex;
		justify-content: center;
		margin: 2rem 0;
	}

	.central-image {
		width: 100%;
		max-width: 600px;
		height: auto;
		border-radius: 8px;
	}

	/* Tarjetas de contenido */
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	/* Ajustes adicionales para el estilo */
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
